<com.lewa.launcher.FolderIcon
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true">
    <LinearLayout android:id="@+id/folder_icon_zone"  
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:gravity="center_horizontal">
        <LinearLayout android:id="@+id/preview_background"  
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="7dip">
            <LinearLayout android:layout_width="fill_parent" 
                android:layout_height="fill_parent" 
                android:layout_weight="1.0">
                <ImageView android:id="@+id/item1" style="@style/FolderCoverIcon"/>
                <ImageView android:id="@+id/item2" style="@style/FolderCoverIcon"/>
                <ImageView android:id="@+id/item3" style="@style/FolderCoverIcon"/>
            </LinearLayout>
            <LinearLayout android:layout_width="fill_parent" 
                android:layout_height="fill_parent" 
                android:layout_weight="1.0">
                <ImageView android:id="@+id/item4" style="@style/FolderCoverIcon"/>
                <ImageView android:id="@+id/item5" style="@style/FolderCoverIcon"/>
                <ImageView android:id="@+id/item6" style="@style/FolderCoverIcon"/>
            </LinearLayout>
            <LinearLayout android:layout_width="fill_parent" 
                android:layout_height="fill_parent" 
                android:layout_weight="1.0">
                <ImageView android:id="@+id/item7" style="@style/FolderCoverIcon"/>
                <ImageView android:id="@+id/item8" style="@style/FolderCoverIcon"/>
                <ImageView android:id="@+id/item9" style="@style/FolderCoverIcon"/>
            </LinearLayout>
        </LinearLayout>
        <TextView android:id="@+id/folder_icon_name"
            style="@style/WorkspaceIcon"
            android:layout_width="match_parent" />
    </LinearLayout>
    <ImageView android:id="@+id/app_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:visibility="invisible"
        android:duplicateParentState="true"
        android:src="@drawable/floating_selector" />
    <ImageView android:id="@+id/floating_open"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:layout_gravity="right"
        android:visibility="invisible"
        android:duplicateParentState="true"
        android:src="@drawable/floating_open_folder" />
    <TextView android:id="@+id/folder_unread"
        style="@style/MsgHintAppearance" />
</com.lewa.launcher.FolderIcon>
